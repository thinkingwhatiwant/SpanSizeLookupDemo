<?xml version="1.0" encoding="utf-8"?>
<com.example.linqingcai.spansizelookupdemo.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tool:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_pics_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#80aaaaaa"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="10dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="visible"
        tool:text="测试" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_alpha_half_bg" />
</com.example.linqingcai.spansizelookupdemo.widget.SquareLayout>